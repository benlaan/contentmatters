<?xml version="1.0" encoding="utf-8" ?>
<page name="home" default="true">
  
  <data name="home.news" type="news" select="all" order="date desc" top="10"/>
  <data name="home.photos" type="photo" select="random" order="date" top="10"/>
  
  <view id="split">
    <view id="welcome" zone="top"/>
    <view id="fav_lists" zone="bottom">
      <view id="recent_posts" zone="left"/>
      <view id="popular_posts" zone="right"/>
    </view>
  </view>
 
</page>