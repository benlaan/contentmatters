<?xml version="1.0" encoding="utf-8" ?>
<view>
  <div class="welcome">
    <h1>Recent News</h1>
    <list data="$news">
      <detail>
        <h2><a href="News/$item.Title/">$item.Title</a></h2>
        <p>$item.Description</p>
        <br/>
        by $item.Author
      </detail>
    </list>
  </div>
</view>