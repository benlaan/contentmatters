<?xml version="1.0" encoding="utf-8" ?>
<view>
  <div class="welcome">
    <h1>Blogs</h1>
    <list each="$blog" data="$blogs">
      <detail>
        <h2>
          <a href="Blogs/$blog.Title">$blog.Title</a>
        </h2>
        <p>$blog.Description</p>
        <br/>
        <div class="author">- $blog.Author.Name</div>
      </detail>
    </list>
  </div>
</view>