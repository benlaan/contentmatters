<?xml version="1.0" encoding="utf-8" ?>
<view>
  <div class="welcome">
    <h1>$blog.Title</h1>
    <list each="$post" data="$blog.Posts">
      <detail>
        <h2><a href="posts/$post.Title/Posts">$post.Title</a></h2>
        <p>$post.Description</p>
        <br/>
        by $post.Author.Name
        <span class="date">$post.Modified</span>
        <a class="comments" href="Posts/$post.Title/Comments">Comments</a>
      </detail>
    </list>
  </div>
</view>