<?xml version="1.0" encoding="utf-8" ?>
<page name="home" default="true">

  <data name="home.news" type="news" select="all" order="date desc" top="10"/>
  <data name="home.photos" type="photo" select="random" order="date" top="10"/>

  <layout page="master">
    <view zone="header" page="site\header" />
    <view zone="body">
      <layout page="vert-split">
        <view zone="top" page="home\welcome" />
        <view zone="bottom">
          <layout page="horz-split">
            <view zone="left" page="recent_posts"/>
            <view zone="right" page="popular_posts"/>
          </layout>
        </view>
      </layout>
    </view>
    <view zone="footer" page="site\footer"/>
  </layout>

</page>