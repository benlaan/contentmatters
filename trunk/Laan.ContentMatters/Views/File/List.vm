<script type="text/javascript">
    $(document).ready( function() { $("tr:odd").addClass("odd"); } );
</script>

<h2>$path.GetLinkList</h2>

<table>
#foreach ( $file in $path.Files )
    <tr>
        #if ( $file.Type == FileSystemType.Directory )
            #set ( $fileName = "folder.png" )
        #end
            #set ( $fileName = "file.png" )
        <td class="image"><img src="Content/$fileName" alt="" /></td>
        <td class="text"><a href="$file.GetLink">$file.Name</a></td>
        <td>$file.DisplaySize</td>
        <td class="datetime">$file.LastModified</td>
    </tr>
#end
</table>
