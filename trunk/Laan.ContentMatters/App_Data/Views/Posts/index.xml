<?xml version="1.0" encoding="utf-8" ?>
<view>
  <div class="welcome">
    <h1>$page.Parent.Parent.</h1>
    <list each="$post" data="$posts">
      <detail>
        <h2><a href="Posts/$post.Title">$post.Title</a></h2>
        <p>$post.Description</p>
        <br/>

        by $post.Author.Name
        <span class="date">$post.Modified</span>
        <!--<a class="comments" href="posts/$post.Title/Comments">Comments</a>-->
      </detail>
    </list>
  </div>
</view>