<?xml version="1.0" encoding="utf-8" ?>
<view>
  <div class="post">
    <h1>$blog.Title</h1>
    <list each="$post" data="$blog.Posts">
      <detail>
        <h2>
          <a href="/Blogs/$blog.Title/Posts/$post.Title">$post.Title</a>
        </h2>
        <p>$post.Description</p>
        <br/>
        <div class="post-footer align-right">
          <a class="comments" href="Posts/$post.Title/Comments">($post.Comments.Count) comment(s)</a>
          <span class="date">$post.Modified</span>
        </div>
      </detail>
    </list>
  </div>
</view>