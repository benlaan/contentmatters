<?xml version="1.0" encoding="utf-8" ?>
<pageConfiguration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
>
  <layouts>
    <layout name="oneColumn" file="~/App_Data/Layouts/oneColumn.vm"/>
    <layout name="twoColumn" file="~/App_Data/Layouts/twoColumn.vm"/>
  </layouts>

  <pages>
    <page name="home" default="true">
      <data name="home.news" type="news" select="all" order="date desc" top="10"/>
      <data name="home.photos" type="photo" select="random" order="date" top="10"/>
    </page>

    <page name="news" layout="oneColumn">
      <data name="news" type="news" select="all" order="date desc" paged="true"/>
    </page>

    <page name="blogs" layout="oneColumn">
      <data name="all.blogs" type="blog" select="all"/>

      <page name="posts">
        <data name="blog.posts" type="post" select="parent" order="date desc" paged="true"/>
        <page name="post">
          <data name="blog.post" type="post" select="key" />
          <data name="blog.post.comments" type="comment" select="parent" order="date asc" paged="true"/>
          <page name="comments"/>
        </page>
      </page>

    </page>

    <page name="photos" layout="oneColumn">
      <data name="photos" type="photo" select="all" order="date" paged="true"/>
    </page>

    <page name="files" layout="oneColumn">
      <data name="files" type="file" select="all" order="name" />
    </page>

    <page name="code">
      <page name="wiki" layout="oneColumn"/>
      <page name="projects" template="projects"/>
      <page name="snippets" layout="oneColumn"/>
    </page>

    <!--<page name="cookng" link="http://cookng.laanfamily.com"/>-->

    <page name="recipes" layout="oneColumn">
      <page name="search"/>
      <page name="tags" />
      <page name="addRecipe" />
      <page name="recipe"/>
      <page name="about"/>
    </page>

    <page name="bios" layout="oneColumn"/>
    <page name="about" layout="oneColumn"/>
  </pages>

</pageConfiguration>